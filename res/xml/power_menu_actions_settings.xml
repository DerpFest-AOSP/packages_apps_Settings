<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:key="power_menu_items"
            android:title="@string/power_menu_items_title">

        <CheckBoxPreference
            android:key="screenshot"
            android:title="@string/power_menu_screenshot_title"
            android:summary="@string/power_menu_screenshot_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="airplane"
            android:title="@string/power_menu_airplane_title"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="users"
            android:title="@string/power_menu_users_title"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="bugreport"
            android:title="@string/power_menu_bug_report_title"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="emergency"
            android:title="@string/power_menu_emergency_title"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="devicecontrols"
            android:title="@string/power_menu_devicecontrols_title"
            android:defaultValue="false"
            android:enabled="false" />

        <CheckBoxPreference
            android:key="panic"
            android:title="@string/power_menu_panic_title"
            android:summary="@string/power_menu_panic_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="restart_systemui"
            android:title="@string/power_menu_restart_systemui_title"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
            android:key="advanced"
            android:title="@string/advanced">

        <org.derpfest.support.preferences.SecureSettingSwitchPreference
            android:key="advanced_reboot"
            android:title="@string/power_menu_advanced_restart_title"
            android:summary="@string/power_menu_advanced_restart_summary"
            android:defaultValue="false" />

        <org.derpfest.support.preferences.SecureSettingListPreference
            android:key="power_menu_type"
            android:title="@string/power_menu_type_title"
            android:summary="%s"
            android:dialogTitle="@string/power_menu_type_title"
            android:entries="@array/power_menu_type_entries"
            android:entryValues="@array/power_menu_type_values"
            android:defaultValue="0" />

    </PreferenceCategory>

</PreferenceScreen>
