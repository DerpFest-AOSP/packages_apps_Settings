<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/misc_vibration_category_title" >

    <org.derpfest.support.preferences.SystemSettingSwitchPreference
        android:defaultValue="true"
        android:key="haptic_on_qs"
        android:title="@string/haptic_on_qs_title"
        android:summary="@string/haptic_on_qs_summary" />

    <org.derpfest.support.preferences.SystemSettingSwitchPreference
        android:defaultValue="true"
        android:key="haptic_on_statusbar"
        android:title="@string/haptic_on_statusbar_title"
        android:summary="@string/haptic_on_statusbar_summary" />

    <org.derpfest.support.preferences.SystemSettingSwitchPreference
        android:defaultValue="true"
        android:key="haptic_on_switch"
        android:title="@string/haptic_on_switch_title"
        android:summary="@string/haptic_on_switch_summary" />

    <org.derpfest.support.preferences.SystemSettingSwitchPreference
        android:defaultValue="true"
        android:key="haptic_on_slider"
        android:title="@string/haptic_on_slider_title"
        android:summary="@string/haptic_on_slider_summary" />

    <org.derpfest.support.preferences.SystemSettingSwitchPreference
        android:defaultValue="true"
        android:key="haptic_on_volume_slider"
        android:title="@string/haptic_on_volume_slider_title"
        android:summary="@string/haptic_on_volume_slider_summary" />

    <org.derpfest.support.preferences.SystemSettingSwitchPreference
        android:defaultValue="true"
        android:key="haptic_on_volume_keys"
        android:title="@string/haptic_on_volume_keys_title"
        android:summary="@string/haptic_on_volume_keys_summary" />

    <org.derpfest.support.preferences.SystemSettingSwitchPreference
        android:defaultValue="true"
        android:key="haptic_on_power_menu"
        android:title="@string/haptic_on_power_menu_title"
        android:summary="@string/haptic_on_power_menu_summary" />

</PreferenceScreen>
